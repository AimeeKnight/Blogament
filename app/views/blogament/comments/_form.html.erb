<div class="row">
  <div class="col-lg-12">
    <%= form_for [@post, @post.comments.build], class: "form-horizontal" do |f| %>
      <fieldset>
        <legend>New Comment</legend>

          <div class="field form-group">
            <%= f.label :text, hidden: true %><br>
            <div class="col-lg-12">
              <%= f.text_area :text, class: "form-control input-lg" %>
            </div>
          </div>

          <div class="actions form-group">
            <div class="col-lg-12">
              <br>
              <%= f.submit class: "btn btn-success" %>
            </div>
          </div>

        <% end %>
      </fieldset>
    </form>
  </div>
</div>
