<div class="row">
  <%= form_for @post, class: "form-horizontal", :html => {:multipart => true} do |f| %>
    <fieldset>
      <legend></legend>
        <% if @post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% @post.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field form-group">
          <%= f.label :title, class: "col-lg-1 control-label input-lg" %><br>
          <div class="col-lg-11 input-lg">
            <%= f.text_field :title %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :image, class: "col-lg-1 control-label input-lg" %><br>
          <div class="col-lg-11 input-lg">
            <%= f.file_field :image %>
          </div>
        </div>

        <div class="field form-group">
          <%= f.label :text, hidden: true, class: "col-lg-1 control-label input-lg" %><br>
          <div class="col-lg-12">
            <%= f.text_area :text, :id => "tinymce4", :rel => "tinymce", :rows => 10, :cols => 40 %>
          </div>
        </div>

        <div class="actions form-group">
          <div class="col-lg-12">
            <%= f.submit class: "btn btn-success" %>
          </div>
        </div>
      <% end %>

      </fieldset>
    </form>
  </div>
