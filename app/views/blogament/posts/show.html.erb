<p id="notice"><%= notice %></p>

<p>
  <b>Author</b>
  <%= @post.author.by_line %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <%#=image_tag @post.image_url(:thumb).to_s %>
</p>

<p>
  <strong>Text:</strong>
  <%=raw @post.text %>
</p>


<h3>Comments</h3>
<%= render @post.comments %>
<%= render "blorgh/comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
